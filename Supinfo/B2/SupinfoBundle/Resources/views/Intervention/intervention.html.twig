{% extends "NtsSupinfoBundle::sta-layout.html.twig" %}

{% block title %}{{ parent() }} - Index{% endblock %}

{% block body %}
<h1>Intervention list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Subject</th>
            <th>Start</th>
            <th>End</th>
            <th>Status</th>
            <th>Sta_id</th>
            <th>Campus_id</th>
            <th>Active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.id }}</td>
            <td>{{ entity.subject }}</td>
            <td>{% if entity.start %}{{ entity.start|date('Y-m-d') }}{% endif%}</td>
            <td>{% if entity.end %}{{ entity.end|date('Y-m-d') }}{% endif%}</td>
            <td>{{ entity.status }}</td>
            <td>{{ entity.staid }}</td>
            <td>{{ entity.campusid }}</td>
            <td>{{ entity.active }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('intervention_show', { 'id': entity.id }) }}">show</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>


<ul>
    <li>
        <a href="{{ path('intervention') }}">
            Back to the index
        </a>
    </li>
</ul>
{% endblock %}